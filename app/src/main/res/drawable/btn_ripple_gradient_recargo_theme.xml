<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    DISABLED    -->
    <item android:width="75dp"
          android:height="38dp"
          android:state_enabled="false">
        <layer-list>

            <!--    DARK GREEN LAYER   -->
            <item>
                <shape>
                    <solid android:color="#bcccac"/>
                    <corners
                        android:radius="8dp">
                    </corners>
                </shape>
            </item>

            <!--    LIGHT GREEN LAYER   -->
            <item android:bottom="20dp">
                <shape>
                    <solid android:color="#d0e2c0"/>
                    <corners
                        android:topLeftRadius="12dp"
                        android:topRightRadius="12dp">
                    </corners>
                </shape>
            </item>

            <!--    BORDER LAYER   -->
            <item>
                <shape>
                    <corners
                        android:radius="8dp">
                    </corners>
                    <stroke
                        android:width="1dp"
                        android:color="#97b388">
                    </stroke>
                </shape>
            </item>

        </layer-list>

    </item>


    <!--    PRESSED -->
    <item android:width="75dp"
          android:height="38dp"
          android:state_pressed="true">
        <layer-list>

            <!--DARK GREEN LAYER-->
            <item>
                <shape>
                    <solid android:color="#88e232"/>
                    <corners
                        android:radius="8dp">
                    </corners>
                </shape>
            </item>

            <!--LIGHT GREEN LAYER-->
            <item android:bottom="20dp">
                <shape>
                    <solid android:color="#c3ec9e"/>
                    <corners
                        android:topLeftRadius="12dp"
                        android:topRightRadius="12dp">
                    </corners>
                </shape>
            </item>


            <!--SHINE GREEN LAYER-->
            <item android:top="1dp"
                  android:bottom="34dp"
                  android:left="2dp"
                  android:right="2dp">
                <shape>
                    <solid android:color="#ddffbb"/>
                    <corners
                        android:topLeftRadius="36dp"
                        android:topRightRadius="36dp">
                    </corners>
                    <size android:width="70dp"
                          android:height="4dp"/>
                </shape>
            </item>


            <!--BORDER LAYER-->
            <item>
                <shape>
                    <corners
                        android:radius="8dp">
                    </corners>
                    <stroke
                        android:width="1dp"
                        android:color="#65d627">
                    </stroke>
                </shape>
            </item>

        </layer-list>

    </item>

    <!--    DEFAULT     -->
    <item android:width="75dp"
          android:height="38dp">
        <layer-list>

            <!--DARK GREEN LAYER-->
            <item>
                <shape>
                    <solid android:color="#76cd23"/>
                    <corners
                        android:radius="8dp">
                    </corners>
                </shape>
            </item>

            <!--LIGHT GREEN LAYER-->
            <item android:bottom="20dp">
                <shape>
                    <solid android:color="#9fd66f"/>
                    <corners
                        android:topLeftRadius="12dp"
                        android:topRightRadius="12dp">
                    </corners>
                </shape>
            </item>


            <!--SHINE GREEN LAYER-->
            <item
                android:top="1dp"
                android:bottom="34dp"
                android:left="2dp"
                android:right="2dp">
                <shape>
                    <solid android:color="#c0e59b"/>
                    <corners
                        android:topLeftRadius="36dp"
                        android:topRightRadius="36dp">
                    </corners>
                    <size android:width="70dp"
                          android:height="4dp"/>
                </shape>
            </item>

            <!--BORDER LAYER-->
            <item>
                <shape>
                    <corners
                        android:radius="8dp">
                    </corners>
                    <stroke
                        android:width="1dp"
                        android:color="#4ab111">
                    </stroke>
                </shape>
            </item>

        </layer-list>

    </item>
</selector>