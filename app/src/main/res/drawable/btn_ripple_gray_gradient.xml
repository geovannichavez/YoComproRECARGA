<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#F0F0EF"
                android:endColor="#F0F0EF"
                android:startColor="#F0F0EF"/>
            <stroke
                android:width="1dp"
                android:color="@color/LightGray">
            </stroke>

            <corners
                android:radius="8dp">
            </corners>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#D6D6D6"
                android:endColor="#f7f7f7"
                android:startColor="#D6D6D6"/>
            <stroke
                android:width="1dp"
                android:color="@color/LightGray">
            </stroke>

            <corners
                android:radius="8dp">
            </corners>

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#F0F0EF"
                android:endColor="#FFFFFF"
                android:startColor="#D6D6D6"/>
            <stroke
                android:width="1dp"
                android:color="@color/LightGray">
            </stroke>

            <corners
                android:radius="8dp">
            </corners>
        </shape>
    </item>
</selector>