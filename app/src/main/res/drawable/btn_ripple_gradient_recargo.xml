<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--    DISABLED    -->
    <item android:width="75dp"
          android:height="40dp"
          android:state_enabled="false">
        <layer-list>

            <!--    DARK GREEN LAYER   -->
            <item>
                <shape>
                    <solid android:color="#bcccac"/>
                    <corners
                        android:radius="8dp">
                    </corners>
                </shape>
            </item>

            <!--    LIGHT GREEN LAYER   -->
            <item android:bottom="20dp">
                <shape>
                    <solid android:color="#d0e2c0"/>
                    <corners
                        android:topLeftRadius="8dp"
                        android:topRightRadius="8dp">
                    </corners>
                </shape>
            </item>


            <!--    DRAWABLE      -->
            <item android:width="51dp"
                  android:height="24dp"
                  android:bottom="@dimen/margin_8dp"
                  android:drawable="@drawable/btn_go_white"
                  android:left="@dimen/margin_12dp"
                  android:right="@dimen/margin_12dp"
                  android:top="@dimen/margin_8dp"/>

            <!--    BORDER LAYER   -->
            <item>
                <shape>
                    <corners
                        android:radius="8dp">
                    </corners>
                    <stroke
                        android:width="1dp"
                        android:color="#97b388">
                    </stroke>
                </shape>
            </item>

        </layer-list>

    </item>


    <!--    PRESSED -->
    <item android:width="75dp"
          android:height="40dp"
          android:state_pressed="true">
        <layer-list>

            <!--DARK GREEN LAYER-->
            <item>
                <shape>
                    <solid android:color="#88e232"/>
                    <corners
                        android:radius="8dp">
                    </corners>
                </shape>
            </item>

            <!--LIGHT GREEN LAYER-->
            <item android:bottom="20dp">
                <shape>
                    <solid android:color="#c3ec9e"/>
                    <corners
                        android:topLeftRadius="8dp"
                        android:topRightRadius="8dp">
                    </corners>
                </shape>
            </item>


            <!--SHINE GREEN LAYER-->
            <item android:bottom="36dp"
                  android:left="3dp"
                  android:right="3dp">
                <shape>
                    <solid android:color="#ddffbb"/>
                    <corners
                        android:topLeftRadius="10dp"
                        android:topRightRadius="10dp">
                    </corners>
                </shape>
            </item>


            <!--DRAWABLE-->
            <item android:width="51dp"
                  android:height="24dp"
                  android:bottom="@dimen/margin_8dp"
                  android:drawable="@drawable/btn_go_white"
                  android:left="@dimen/margin_12dp"
                  android:right="@dimen/margin_12dp"
                  android:top="@dimen/margin_8dp"/>

            <!--BORDER LAYER-->
            <item>
                <shape>
                    <corners
                        android:radius="8dp">
                    </corners>
                    <stroke
                        android:width="1dp"
                        android:color="#65d627">
                    </stroke>
                </shape>
            </item>

        </layer-list>

    </item>

    <!--    DEFAULT     -->
    <item android:width="75dp"
          android:height="40dp">
        <layer-list>

            <!--DARK GREEN LAYER-->
            <item>
                <shape>
                    <solid android:color="#76cd23"/>
                    <corners
                        android:radius="8dp">
                    </corners>
                </shape>
            </item>

            <!--LIGHT GREEN LAYER-->
            <item android:bottom="20dp">
                <shape>
                    <solid android:color="#9fd66f"/>
                    <corners
                        android:topLeftRadius="8dp"
                        android:topRightRadius="8dp">
                    </corners>
                </shape>
            </item>


            <!--SHINE GREEN LAYER-->
            <item
                  android:bottom="36dp"
                  android:left="3dp"
                  android:right="3dp">
                <shape>
                    <solid android:color="#c0e59b"/>
                    <corners
                        android:topLeftRadius="10dp"
                        android:topRightRadius="10dp">
                    </corners>
                    <size android:width="70dp"
                          android:height="4dp" />
                </shape>
            </item>


            <!--DRAWABLE-->
            <item android:width="51dp"
                  android:height="24dp"
                  android:bottom="@dimen/margin_8dp"
                  android:drawable="@drawable/btn_go_white"
                  android:left="@dimen/margin_12dp"
                  android:right="@dimen/margin_12dp"
                  android:top="@dimen/margin_8dp"/>

            <!--BORDER LAYER-->
            <item>
                <shape>
                    <corners
                        android:radius="8dp">
                    </corners>
                    <stroke
                        android:width="1dp"
                        android:color="#4ab111">
                    </stroke>
                </shape>
            </item>

        </layer-list>

    </item>


</selector>