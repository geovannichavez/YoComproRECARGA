<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="182dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_achievement_item"/>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baloo_regular"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView31"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgAchvCounter"
        app:layout_constraintTop_toTopOf="@+id/imageView31"
        tools:text="RECOLECTOR DE ORO"/>

    <ImageView
        android:id="@+id/imgAchvCounter"
        android:layout_width="53dp"
        android:layout_height="69dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="136dp"
        android:layout_marginRight="136dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView31"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView31"
        app:srcCompat="@drawable/ic_achvs_counter_2"/>

    <TextView
        android:id="@+id/txtDescription"
        fontPath="fonts/lato_semibold.ttf"
        android:layout_width="129dp"
        android:layout_height="25dp"
        android:fontFamily="@font/lato_semibold"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView31"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgAchvCounter"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:text="Debes recolectar 100 monedas de oro en un sÃ³lo dia para ganar."/>

    <TextView
        android:id="@+id/txtActual"
        fontPath="fonts/lato_semibold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/lato_semibold"
        android:textSize="9sp"
        app:layout_constraintStart_toEndOf="@+id/imgAchvCounter"
        app:layout_constraintTop_toBottomOf="@+id/txtDescription"
        tools:text="Actual: 10000"/>

    <ImageView
        android:id="@+id/imgCoins"
        android:layout_width="61dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnFacebook"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView31"
        app:layout_constraintTop_toBottomOf="@+id/txtActual"
        app:srcCompat="@drawable/ic_prize_on_achievement"/>


    <ImageButton
        android:id="@+id/btnFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="@+id/imageView31"
        app:layout_constraintTop_toBottomOf="@+id/txtActual"
        app:srcCompat="@drawable/ic_facebook"/>

    <com.facebook.share.widget.ShareButton
        android:id="@+id/btnShare"
        android:layout_width="38dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/imageView31"
        app:layout_constraintTop_toBottomOf="@+id/txtActual"/>

    <TextView
        android:id="@+id/txtCoins"
        android:layout_width="33dp"
        android:layout_height="15dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/baloo_regular"
        android:gravity="center"
        android:textSize="9sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgCoins"
        app:layout_constraintEnd_toEndOf="@+id/imgCoins"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imgCoins"
        app:layout_constraintTop_toTopOf="@+id/imgCoins"
        app:layout_constraintVertical_bias="0.100000024"
        tools:text="10,000"/>


</android.support.constraint.ConstraintLayout>

