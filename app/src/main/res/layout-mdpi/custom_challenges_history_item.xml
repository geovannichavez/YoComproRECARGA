<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="193dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imgResult"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView42"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView22"
        app:layout_constraintTop_toTopOf="@+id/imageView22"
        app:layout_constraintVertical_bias="0.26999998"
        app:srcCompat="@drawable/ic_challenge_win"/>

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:fontFamily="@font/baloo_regular"
        android:text="@string/label_challenge_result"
        android:textAllCaps="true"
        android:textColor="@color/pure_black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/imgResult"
        app:layout_constraintStart_toStartOf="@+id/imgResult"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/lblTermini"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/baloo_regular"
        android:text="@string/label_challenge_termini_from"
        android:textAllCaps="true"
        android:textColor="@color/pure_black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="111dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTermini"
        app:srcCompat="@drawable/ic_challenge_nickname"/>

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/baloo_regular"
        android:text="@string/label_challenge_bet"
        android:textAllCaps="true"
        android:textColor="@color/pure_black"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView22"/>

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="64dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView39"
        app:layout_constraintVertical_bias="0.74"
        app:srcCompat="@drawable/ic_challenge_bet"/>

    <ImageView
        android:id="@+id/btnBetType"
        android:layout_width="43dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView42"
        app:layout_constraintEnd_toEndOf="@+id/imageView22"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/imageView42"
        app:layout_constraintTop_toTopOf="@+id/imageView42"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_challenge_incoming"/>

    <TextView
        android:id="@+id/lblNickname"
        android:layout_width="108dp"
        android:layout_height="21dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/baloo_regular"
        android:gravity="center"
        android:maxLines="1"
        android:textAllCaps="true"
        android:textColor="@color/white_textView_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView22"
        app:layout_constraintEnd_toEndOf="@+id/imageView22"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="@+id/imageView22"
        app:layout_constraintTop_toTopOf="@+id/imageView22"
        app:layout_constraintVertical_bias="0.0"
        tools:text="abcdefghijklmnopqrs"/>

    <TextView
        android:id="@+id/lblBet"
        android:layout_width="44dp"
        android:layout_height="19dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/baloo_regular"
        android:gravity="center"
        android:textColor="@color/white_textView_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView42"
        app:layout_constraintEnd_toEndOf="@+id/imageView42"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView42"
        app:layout_constraintTop_toTopOf="@+id/imageView42"
        tools:text="+20"/>
</android.support.constraint.ConstraintLayout>