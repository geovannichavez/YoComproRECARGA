<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="fill_parent"
             android:layout_height="match_parent"
             android:background="@color/ActivityWhiteBackground"
             android:gravity="center"
             android:orientation="vertical"
             android:paddingTop="@dimen/margin_6dp"
             android:paddingEnd="@dimen/margin_4dp"
             android:paddingLeft="@dimen/margin_4dp"
             android:paddingRight="@dimen/margin_4dp"
             android:paddingStart="@dimen/margin_4dp">

    <WebView
        android:id="@+id/wvTermsAndConditions"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
    </WebView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>