<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leaderboards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.globalpaysolutions.yocomprorecarga.ui.activities.Leaderboards"
    tools:layout_editor_absoluteY="25dp">


    <ImageView
        android:id="@+id/bgTimemachine"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/bg_background_4" />

    <!-- Layer 1-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="15"
                android:weightSum="100">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    />

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_back_3"
                    android:scaleType="fitCenter"
                    android:layout_weight="15"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    />


                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bg_title_3"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="84"
                android:weightSum="100">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    />
                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="88"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/bg_screen_leaderboards"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>


        </LinearLayout>

    </RelativeLayout>


    <!-- Layer 2-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="15"
                android:weightSum="100">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/title_leaderboards"
                    android:textColor="@color/color_white_timemachine_background"
                    android:textSize="13sp"
                    android:layout_weight="50"
                    android:fontFamily="@font/baloo_regular"
                    android:textAllCaps="true"
                    android:gravity="center"/>



                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:weightSum="100"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    />

                <TextView
                    android:id="@+id/btnToday"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/color_white_timemachine_background"
                    android:textSize="13sp"
                    android:background="@drawable/btn_time_off"
                    android:fontFamily="@font/baloo_regular"
                    android:text="HOY"
                    android:gravity="center"
                    android:layout_weight="15"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    />

                <TextView
                    android:id="@+id/btnWeek"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="SEMANA"
                    android:background="@drawable/btn_time_off"
                    android:gravity="center"
                    android:textColor="@color/color_white_timemachine_background"
                    android:textSize="13sp"
                    android:fontFamily="@font/baloo_regular"
                    android:layout_weight="15"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    />
                <TextView
                    android:id="@+id/btnMonth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_time_off"
                    android:text="MES"
                    android:gravity="center"
                    android:textColor="@color/color_white_timemachine_background"
                    android:textSize="13sp"
                    android:fontFamily="@font/baloo_regular"
                    android:layout_weight="15"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    />
                <TextView
                    android:id="@+id/btnGlobal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="TRIVIA"
                    android:background="@drawable/btn_time_off"
                    android:gravity="center"
                    android:textColor="@color/color_white_timemachine_background"
                    android:textSize="13sp"
                    android:fontFamily="@font/baloo_regular"
                    android:layout_weight="15"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="14"
                    />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="58"
                android:weightSum="100">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"

                    />
                <ListView
                    android:id="@+id/lvLeaderboard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70"
                    android:fontFamily="@font/baloo_regular" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="13"
                android:weightSum="100">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="27"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_weight="45">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40"
                        android:scaleType="fitXY"
                        android:id="@+id/imageView21"
                        app:srcCompat="@drawable/bg_last_winner"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40"/>
                </LinearLayout>




                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="28"
                    />
            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>

    <!-- Layer 3-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="15"
                android:weightSum="100">

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"
                android:weightSum="100"
                android:orientation="horizontal">
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="59"
                android:weightSum="100">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="13"
                android:weightSum="100">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="27"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_weight="44">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="20"/>
                    <TextView
                        android:id="@+id/tvLastWinner"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Último ganador:"
                        android:gravity="center"
                        android:layout_weight="40"
                        android:textSize="11sp"
                        android:textColor="@color/white_textView_color"
                        android:textStyle="bold" />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40"/>
                </LinearLayout>




                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="27"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
