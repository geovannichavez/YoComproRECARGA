<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="15">

    <!--    Column 1: Weight 3-->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_weight="3"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivPrizeIcon"
            android:layout_width="38dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_prize_first"/>
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@drawable/custom_dashed_vertical_line"/>

    <!--    Column 2: Weight 8-->
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_weight="8"
        android:gravity="center">

        <LinearLayout
            android:padding="@dimen/margin_6dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPrizeName"
                android:text="Nevagcion Ilimitada 1 Sem. feeded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="3"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="14sp"
                android:textColor="@color/pure_black"/>
            <TextView
                android:text="Nevega ilimitado por 7 dias. "
                android:layout_gravity="center"
                android:id="@+id/tvPin"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textSize="12sp"
                fontPath="fonts/lato_semibold.ttf"
                android:textColor="@color/pure_black"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@drawable/custom_dashed_vertical_line"/>


    <!--    Column 3: Weight 4-->
    <RelativeLayout
        android:paddingLeft="@dimen/margin_6dp"
        android:paddingStart="@dimen/margin_6dp"
        android:paddingEnd="@dimen/margin_6dp"
        android:paddingRight="@dimen/margin_6dp"
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_weight="4"
        android:gravity="center">

        <TextView
            android:text="SMS al 323"
            android:id="@+id/tvExchange"
            android:textSize="16sp"
            android:maxLines="4"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pure_black"/>
    </RelativeLayout>
</LinearLayout>