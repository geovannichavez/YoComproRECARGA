<resources>

    <!-- Base application theme. -->

    <!-- Default -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>

        <!--    TOOLBAR     -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
    </style>

    <style name="AppThemeTrans" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--<item name="android:textColor">@color/ApplicationGreenTheme</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
    </style>

    <style name="transparentToolbarTheme" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/ApplicationGreenTheme</item>
    </style>

    <!--<style name="contextualToolbarTheme" parent="AppTheme">
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/ApplicationGreenTheme</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
    </style>-->

    <style name="contextualToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/ApplicationGreenTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
    </style>

    <style name="contextualDarkToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/ApplicationGreenThemeDark</item>
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
    </style>


