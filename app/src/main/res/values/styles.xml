    <style name="HorizontalGrayLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/LightGray</item>
    </style>

    <style name="VerticalGrayLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/LightGray</item>
    </style>

    <style name="dashedVerticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/custom_dashed_vertical_line</item>
    </style>

    <!--    TAB LAYOUT -->
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/dark_recargo_green</item>
        <!--<item name="tabIndicatorColor">@color/indicator</item>-->
        <item name="tabIndicatorColor">@android:color/transparent</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="showcaseview_theme" parent="ShowcaseView">
        <item name="sv_backgroundColor">@color/SemiTransparentBlack</item>
        <item name="sv_showcaseColor">@color/color_red_recargo</item>
        <item name="sv_titleTextAppearance">@style/showcaseview_title</item>
        <item name="sv_detailTextAppearance">@style/showcase_content</item>
        <item name="sv_buttonText">Siguiente</item>
    </style>

    <style name="showcaseview_title" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">@color/color_red_recargo</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="showcase_content" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

   <!-- ********************************

        Branded Switch

   ************************************     -->
    <style name="BrandedSwitch.control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#e6e600</item>
        <item name="colorSwitchThumbNormal">#cc0000</item>
    </style>

    <style name="BrandedSwitch.text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#ffa000</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="BrandedCheckBox" parent="AppTheme">
        <item name="colorAccent">#aaf000</item>
        <item name="colorControlNormal">#00f7c2</item>
    </style>

    <style name="BrandedSwitch" parent="AppTheme">
        <!--<item name="colorAccent">#39ac39</item>-->
        <!--<item name="colorControlActivated">@color/custom_switch_gray</item>-->
        <item name="colorAccent">@color/custom_switch_gray</item>
    </style>


