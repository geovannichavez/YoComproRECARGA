<resources>

    <!-- Base application theme. -->

    <!-- Default -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>

        <!--    TOOLBAR     -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
    </style>

    <style name="AppThemeYvr" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_yovendorecarga_green</item>
        <item name="colorPrimaryDark">@color/color_yovendorecarga_green_dark</item>
        <item name="colorAccent">@color/color_yovendorecarga_green_dark</item>

        <!--    TOOLBAR     -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
    </style>

    <style name="AppThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowBackground">@color/color_timemachine_background</item>
        <item name="android:colorBackground">@color/color_timemachine_background</item>
    </style>

    <style name="AppWhiteThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowBackground">@color/color_white_timemachine_background</item>
        <item name="android:colorBackground">@color/color_white_timemachine_background</item>
    </style>

    <style name="AppThemeTrans" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--<item name="android:textColor">@color/ApplicationGreenTheme</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
    </style>

    <style name="transparentToolbarTheme" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/ApplicationGreenTheme</item>
    </style>

    <!--<style name="contextualToolbarTheme" parent="AppTheme">
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/ApplicationGreenTheme</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
