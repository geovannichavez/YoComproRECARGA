<resources>

    <!-- Base application theme. -->

    <!-- Default -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ApplicationGreenTheme</item>
        <item name="colorPrimaryDark">@color/ApplicationGreenThemeDark</item>
        <item name="colorAccent">@color/ApplicationGreenTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/ApplicationGreenTheme</item>
    </style>


