    <style name="contextualToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@color/ApplicationGreenTheme</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/dark_recargo_green</item>
    </style>

    <style name="contextualDarkToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/ApplicationGreenThemeDark</item>
        <item name="android:textColor">@color/ActivityWhiteBackground</item>
    </style>

    <style name="contextualDarkToolbarThemeYVR" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/color_yovendorecarga_green</item>
        <item name="android:textColor">@color/color_yovendorecarga_green_dark</item>
    </style>


