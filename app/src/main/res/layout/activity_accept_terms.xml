<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_general_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="6"
    tools:context="com.globalpaysolutions.yocomprorecarga.ui.activities.AcceptTerms">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ActivityVerticalExtraCustomMargin"
            android:src="@drawable/img_ycr_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_accept_terms_and_conditions"
            android:textColor="@color/GeneralTextColor"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAcceptTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="acceptTerms"
            android:minWidth="180dp"
            android:background="@drawable/btn_effect_ripple_green"
            android:paddingLeft="@dimen/ActivityHorizontalCustomMargin"
            android:paddingRight="@dimen/ActivityHorizontalCustomMargin"
            android:textColor="@color/ActivityWhiteBackground"
            android:text="@string/button_continue"/>
    </LinearLayout>

</LinearLayout>
