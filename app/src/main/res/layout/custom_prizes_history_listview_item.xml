<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/bgPrizeItem"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_prize_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <!-- Layer 1 -->
    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="32"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="68"
            android:weightSum="100"
            android:layout_height="match_parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"/>

            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15">

                <ImageView
                    android:src="@drawable/bg_prize_pin"
                    android:layout_weight="70"
                    android:layout_width="0dp"
                    android:scaleType="fitCenter"
                    android:layout_height="match_parent" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"/>
                <ImageView
                    android:src="@drawable/btn_exchange_prize_pin"
                    android:scaleType="fitCenter"
                    android:layout_width="0dp"
                    android:layout_weight="25"
                    android:layout_height="match_parent" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"/>

            </LinearLayout>

            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="13">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="43"
                    android:fontFamily="@font/baloo_regular"
                    android:gravity="center_vertical|end"
                    android:includeFontPadding="false"
                    android:textColor="@color/pure_black"
                    android:textSize="10sp"
                    android:singleLine="true"
                    tools:text="Â¿Premio canjeado?" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"/>


                <LinearLayout
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15" />

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="70"
                        android:textOff=""
                        android:textOn=""
                        android:theme="@style/dark_switch_theme" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15" />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"/>

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Layer 2 -->
    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="32"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="68"
            android:weightSum="100"
            android:layout_height="match_parent">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="30"
                android:layout_width="wrap_content"
                android:layout_height="0dp">
                <TextView
                    tools:text="SMS ILIM TODAS LAS REDES 24H"
                    android:textColor="@color/white_textView_color"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/baloo_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    tools:text="Ganaste mensaje de texto ilimitados a todas las redes durante 24 horas"
                    android:textColor="@color/white_textView_color"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/baloo_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <LinearLayout
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15">
                <TextView
                    android:src="@drawable/bg_prize_pin"
                    android:layout_weight="70"
                    android:layout_width="0dp"
                    android:gravity="center"
                    tools:text="PIN: 09876543211144"
                    android:textSize="14sp"
                    android:fontFamily="@font/baloo_regular"
                    android:textColor="@color/white_textView_color"
                    android:layout_height="match_parent" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:theme="@style/dark_switch_theme" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>