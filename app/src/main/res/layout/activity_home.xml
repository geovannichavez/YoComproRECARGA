<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.globalpaysolutions.yocomprorecarga.ui.activities.Home">

    <android.support.v7.widget.Toolbar
        android:id="@+id/homeToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ApplicationGreenTheme"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        app:theme="@style/ToolbarTheme">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="195dp"
            android:layout_height="23dp"
            android:src="@drawable/logo_horizontal"/>

    </android.support.v7.widget.Toolbar>

    <fragment
        android:id="@+id/map"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"/>
    <RelativeLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/btn_effect_ripple_green"
                android:textColor="@color/ActivityWhiteBackground"
                android:layout_gravity="center_horizontal"
                android:text="Solicitar Recarga"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:background="@drawable/btn_effect_ripple_white"
                android:text="PokÃ©mon GO"
                android:paddingEnd="8dp"
                android:layout_gravity="center_horizontal"
                android:paddingStart="8dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>