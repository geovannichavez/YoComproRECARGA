<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_request_topup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_general_background"
    android:orientation="vertical"
    tools:context="com.globalpaysolutions.yocomprorecarga.ui.activities.RequestTopup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <!--Para evitar el focus en EditText se
                                      ha aÃ±adido 'focusable' y 'focusableInTouchMode' -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/homeToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/ApplicationGreenTheme"
                android:elevation="4dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat"
                app:theme="@style/ToolbarTheme">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="195dp"
                    android:layout_height="23dp"
                    android:src="@drawable/logo_horizontal"/>
            </android.support.v7.widget.Toolbar>

            <!-- ANTERIOR: android:layout_height="wrap_content"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="15"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                >

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_marginBottom="8dp"
                    android:weightSum="7">

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="@string/hint_specify_phone_number"
                        android:digits="-0123456789"
                        android:ellipsize="start"
                        android:gravity="center"
                        android:inputType="number|phone"
                        android:maxLength="9"
                        android:textSize="25sp"
                        android:id="@+id/editText"/>

                    <View
                        style="@style/VerticalGrayLine"
                        android:layout_marginEnd="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginStart="8dp"/>

                    <ToggleButton
                        android:textOff="@string/button_my_number"
                        android:textOn="@string/button_my_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawableEnd="@drawable/ic_account"
                        android:drawableRight="@drawable/ic_account"
                        android:layout_weight="3" />
                </LinearLayout>

                <View style="@style/HorizontalGrayLine"/>

                <!-- _Operadores GridView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/label_select_operator"
                        android:textColor="@color/SubtitleTextColor"
                        android:textSize="14sp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <GridView
                            android:id="@+id/gvOperadores"
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:choiceMode="singleChoice"
                            android:gravity="center_horizontal"
                            android:horizontalSpacing="8dp"
                            android:numColumns="2"
                            android:scrollbars="none"/>
                    </LinearLayout>


                </LinearLayout>

                <!--Contenedor de Monto de Recarga-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/label_select_recharge_amount"
                        android:textColor="@color/SubtitleTextColor"
                        android:textSize="14sp"/>

                    <Spinner
                        android:id="@+id/spMontoRecarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"/>


                </LinearLayout>

                <!--Contenedor del Numero a Recargar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="20dp"
                    android:layout_marginBottom="@dimen/ActivityVerticalExtraCustomMargin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@string/label_type_vendor_code"
                        android:textColor="@color/SubtitleTextColor"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/etCodeNumber"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:ellipsize="start"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="5"
                        android:textSize="23sp"
                        android:imeOptions="actionDone"
                        android:background="@drawable/custom_white_edittext_rounded_corners"
                        android:hint="@string/hint_vendor_code"/>
                </LinearLayout>


                <!--Contenedor de Boton-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="14dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:text="@string/label_make_sure_correct_phone"
                        android:textColor="@color/TextColor"
                        android:textSize="14sp"/>

                    <Button
                        android:id="@+id/btnEnvar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@drawable/btn_effect_ripple_green"
                        android:clickable="true"
                        android:text="@string/button_request_topup"
                        android:textColor="@color/ActivityWhiteBackground"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
